<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Toolbar styles -->
    <style name="Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/ToolbarOverlay</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:theme">@style/ThemeOverlay.FitNow.ActionBar</item>
    </style>

    <style name="ToolbarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.FitNow.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
    </style>

    <!-- Home menu buttons styles -->
    <style name="menuButtonStyles">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:drawablePadding">@dimen/spacing_large</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Custom TabLayout styles -->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/spacing_medium_normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


</resources>
