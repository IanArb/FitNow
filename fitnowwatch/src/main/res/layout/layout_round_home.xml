<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <Button
            style="@style/menuButtonStyles"
            android:id="@+id/runBtn"
            android:background="@drawable/border"
            android:drawableStart="@drawable/ic_directions_run"
            android:text="@string/run_menu"/>

        <Button
            style="@style/menuButtonStyles"
            android:id="@+id/cycleBtn"
            android:background="#50000000"
            android:drawableStart="@drawable/ic_directions_bike"
            android:text="@string/cycling_menu"/>

        <Button
            style="@style/menuButtonStyles"
            android:id="@+id/walkBtn"
            android:background="@drawable/border"
            android:drawableStart="@drawable/ic_directions_walk"
            android:text="@string/walk_menu"/>

    </LinearLayout>

</RelativeLayout>